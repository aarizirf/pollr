<% include ../partials/header %>


    <div class="container">

        <div class="row">
            <div class="col-md-6 offset-md-3 col-sm-12">
                <h1>Create a Poll</h1>

                <div class="input-group mt-3">
                    <input class="form-control question-input" type="text" name="question" placeholder="Question">
                </div>
                <div class="mt-3">
                    <div class="row">
                        <div class="col-sm-6 col-12">
                            <input class="form-control option1-input" type="text" name="option1" placeholder="Option 1">
                        </div>
                        <div class="col-sm-6 col-12 mt-1">
                            <input class="form-control option2-input" type="text" name="option2" placeholder="Option 2">
                        </div>
                    </div>
                </div>
                <input class="btn btn-block btn-info submit-poll mt-4" type="submit" value="Create poll">
            </div>
        </div>


    </div>

    <script src="http://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous "></script>
    <script src="/lib/newPoll.js"></script>


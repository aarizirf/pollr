<% include ../partials/header %>

    <div class="jumbotron jumbotron-topic">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-6 offset-md-3">
                    <span class="badge badge-dark text-uppercase">Topic</span>
                    <h1 class="jumbotron-topic-heading text-center">
                        <%= topic.name %>
                    </h1>
                    <p class="lead text-muted text-center">
                        <%= topic.description %>
                    </p>
                    <div class="row">
                        <div class="col-md-8 offset-md-2 col-sm-12">
                            <% if(isFollowing === false) { %>
                                <a href="/topics/<%= topic.name %>/follow/" class="btn btn-success btn-lg btn-block">
                                    <span>
                                        <i class="fas fa-user-plus"></i>
                                    </span>Follow
                                </a>
                                <% } else { %>
                                    <a href="/topics/<%= topic.name %>/unfollow/" class="btn btn-outline-danger btn-lg btn-block">
                                        <span>
                                            <i class="fas fa-user-slash"></i>
                                        </span>Unfollow
                                    </a>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-12 mb-5">
                <ul class="list-group">
                    <li class="list-group-item">
                        <p class="display-5">
                            Topic Creator:
                            <span class="font-weight-bold">
                                <a href="#">
                                    <%= topic.author.username %>
                                </a>
                            </span>
                        </p>
                    </li>
                    <li class="list-group-item">
                        <p class="display-5">
                            Created:
                            <span class="font-weight-bold">
                                <%= moment(topic.createdAt).fromNow() %>
                            </span>
                        </p>
                    </li>
                    <li class="list-group-item">
                        <p class="display-5">
                            </em>Page views:</em>
                            <span class="font-weight-bold">
                                <%= topic.views %> views
                            </span>
                        </p>
                    </li>
                </ul>
            </div>
            <div class="col-md-8 col-sm-12">
                <h3>Most Recent Polls</h3>
                <% polls.forEach(function(poll) { %>
                    <div class="card mb-5">
                        <div class="card-header">
                            Created by
                            <strong>
                                <%= poll.author.username %>
                            </strong>

                            <a id="<%= poll._id %>" class="delete-button">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                        <div class="w-100 card-body">
                            <h4 class="card-title text-center">
                                <%= poll.question %>
                            </h4>
                            <div class="row">
                                <div class="col-sm-12 col-md-6 offset-md-3">
                                    <div class="input-group">
                                        <button id="<%=poll._id%>" class="option1 form-control btn btn-outline-secondary py-4" towidth="<%= (poll.pollOption1.votes/(poll.pollOption1.votes+poll.pollOption2.votes))*100 %>">
                                            <%= poll.pollOption1.text %>
                                        </button>
                                        <button id="<%=poll._id%>" class="option2 form-control btn btn-outline-secondary py-4" towidth="<%= (poll.pollOption2.votes/(poll.pollOption1.votes+poll.pollOption2.votes))*100 %>">
                                            <%= poll.pollOption2.text %>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="badges mt-2">
                                <span class="badge badge-pill badge-info">
                                    <%= poll.pollOption1.votes + poll.pollOption2.votes %> votes
                                </span>
                                <span class="badge badge-pill badge-dark">
                                    <%= moment(poll.createdAt).fromNow() %>
                                </span>
                            </div>

                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

    <script src="http://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
    <script src="/lib/pollClick.js"></script>
    <script src="/lib/deletePoll.js"></script>

    <% include ../partials/footer %>